<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bookme</title>
    <link rel="stylesheet" href="~/bootstrap-4.6.2-dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Bookme.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/fontawesome/css/all.css"/>
    <link rel="stylesheet" href="~/css/sweetalert2.css"/>
    <script>

    function showLoader() {
        $("#myModal").modal({ backdrop: 'static', keyboard: false });
    }
    function hideLoader() {
        $("#myModal").modal('hide');
    }
    function showSpin() {
        $("#showspin").fadeOut(1500);
        $("#showcontent").fadeIn(3000);
    }

    function errorAlert(message) {
        Swal.fire({
            icon: 'error',
            text: message,
        })
    }

    function infoAlert(message) {
        Swal.fire({
            icon: 'info',
            text: message,
        })
    }

    function infoAlertWithStyles(message) {
        Swal.fire({
            title: 'Notification',
            icon: 'info',
            text: message,
        })
    }

    function successAlert(message) {
        Swal.fire({
            icon: 'success',
            text: message,
        })
    }

    function newSuccessAlert(message, url) {
        Swal.fire({
            icon: 'success',
            text: message,
        }).then(function () {

            location.href = url;
        })
    }

    function successAlertWithRedirect(message, url) {
        swal.fire({
            title: "Success",
            text: message,
            icon: "success",
            timer: "30000",
            overlay: "background - color: rgba(43, 165, 137, 0.45)",
        }).then(function () {

            location.href = url;
        })
    }

    function successAlertWithDoubleButtons(message, url) {
        swal.fire({
            title: "Success",
            text: message,
            icon: "success",
            showCancelButton: true,
            cancelButtonColor: "#22c8db",
            confirmButtonText: "Pay Reg Bonus",
            confirmButtonColor: "#006400",
        }).then((result) => {
            if (result.isConfirmed) {
                location.href = url;
            }
            else {
                location.reload();
            }
        })
    }

</script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow" style="background-color: #f2f2f2">
            <div class="container-fluid">
