@{
    ViewData["Title"] = "Login";
}<style>
 a{
     text-decoration:none
 }
</style>

<div class="container row mx-auto">
    <div class="mt-5 mb-4">
        <h2 class="text-center">Login</h2>
    </div>
    <div class="container card shadow col-5" style="background-color:#2b05df">
        <div class=" mt-4" style="color:white">
            <label><b>Email</b></label>
            <input class="form-control" />
        </div>
        <div class="mt-3" style="color:white">
            <label><b>Password</b></label>
            <input class="form-control" />
        </div>
        <div class="row">
            <div class="col-8 mt-2">
                <h6>Don't have an account? <a asp-action="login" asp-controller="account" style="color:white">SignUp</a></h6>
            </div>
            <div class="col-4 mt-2 text-light float-right" >
                <a asp-action="forgetPassword" asp-controller="account" style="color:white">Forget Password?</a>
            </div>
        </div>
        <div class="text-center mt-3">
            <button type="submit" class="btn btn-light m-auto d-block px-4 mb-4"><b>Sign In</b></button>
        </div>

    </div>
</div>